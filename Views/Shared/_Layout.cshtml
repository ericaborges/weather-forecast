<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        @ViewBag.Title -
        Georgian Weather Station

    </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-light bg-light static-top custom-nav-links" id="mainNav">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Weather Forecast", "Index", "WeatherInfo", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @Html.ActionLink("Home", "Index", "Home",  new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("About", "About", "Home",  new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("Get Data", "GetData", "Home",  new { area = "" }, new { @class = "navbar-brand" })
            
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Big Data Analytics</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
